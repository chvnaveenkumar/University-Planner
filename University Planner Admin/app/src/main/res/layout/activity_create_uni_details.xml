<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.s530742.universityplanneradmin.activity_create_uni_details">


    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_gravity="right"
        android:background="@null"
        android:onClick="signout"
        android:text="Logout" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="271dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:text="University Planner"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        tools:textSize="30sp" />

    <TextView
        android:id="@+id/StateTitle"
        android:layout_width="178dp"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:paddingHorizontal="37dp"
        android:text="Choose State" />

    <Spinner
        android:id="@+id/spinner_state"
        android:layout_width="298dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3" />

    <TextView
        android:id="@+id/universityTitle"
        android:layout_width="222dp"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:paddingHorizontal="37dp"
        android:text="Choose University" />

    <Spinner
        android:id="@+id/spinner_university"
        android:layout_width="297dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3" />

    <EditText
        android:id="@+id/newUnivetisty"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:hint="Enter University Name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/courseTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="7dp"
        android:layout_gravity="center_horizontal"
        android:text="Choose Course" />

    <Spinner
        android:id="@+id/spinner_course"
        android:layout_width="280dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/courseNew"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:hint="Enter Course Name"
        android:layout_gravity="center_horizontal"
        android:inputType="textPersonName" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:columnCount="2"
        android:rowCount="2">


        <TextView
            android:id="@+id/greText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="GRE Score: "
            android:textSize="18sp" />

        <EditText
            android:id="@+id/greEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:ems="10"
            android:hint="GRE Score"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/toeflText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="TOEFL Score: "
            android:textSize="18sp" />

        <EditText
            android:id="@+id/toefleditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:ems="10"
            android:hint="TOEFL Score"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/ieltstextView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="IELTS Score: "
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ieltsEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:ems="10"
            android:hint="IELTS Score"
            android:inputType="numberDecimal" />
    </GridLayout>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_green_light"
        android:text="Save" />


</LinearLayout>
